APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Document template rendering
BROWSERSHOT_CHROME_PATH=/usr/bin/google-chrome
BROWSERSHOT_NODE_PATH=/usr/bin/node
BROWSERSHOT_TIMEOUT=60
BROWSERSHOT_DISABLE_SANDBOX=false
DOCUMENT_TEMPLATE_ENGINE=dompdf
DOCUMENT_TEMPLATE_ALLOWED_HOSTS=
DOCUMENT_TEMPLATE_PREVIEW_RATE=10

# Browsershot PDF Rendering Configuration
# =========================================
# Full paths to Node.js binary (required for Browsershot)
BROWSERSHOT_NODE_BINARY=/usr/bin/node
# Full path to NPM binary (required for Browsershot)
BROWSERSHOT_NPM_BINARY=/usr/bin/npm
# Full path to Chrome/Chromium binary
# Common locations:
# - Ubuntu/Debian: /usr/bin/google-chrome or /usr/bin/chromium-browser
# - CentOS/RHEL: /usr/bin/chromium-browser
# - Docker Alpine: /usr/bin/chromium-browser
BROWSERSHOT_CHROME_PATH=/usr/bin/google-chrome
# Enable no-sandbox mode for Docker/restricted environments (true|false)
# Set to true if running in Docker or seeing "Running as root without --no-sandbox" errors
BROWSERSHOT_NO_SANDBOX=false
# PDF generation timeout in seconds (default: 60)
BROWSERSHOT_TIMEOUT=60

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL Configuration (Recommended)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=pusdokkes_subunit
# DB_USERNAME=postgres
# DB_PASSWORD=your_password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue Configuration
# - database: Async jobs stored in DB (requires: php artisan migrate, php artisan queue:work)
# - sync: Jobs run immediately (simpler for local dev, no queue worker needed)
# See QUEUE_CONFIGURATION_GUIDE.md for details
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

WHATSAPP_API_URL=http://localhost:3000
WHATSAPP_API_KEY=

VITE_APP_NAME="${APP_NAME}"
