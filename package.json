{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "audit:stylelint": "stylelint \"resources/**/*.{css,scss}\" \"public/**/*.css\" \"styles/**/*.css\" --allow-empty-input --formatter verbose",
        "audit:eslint": "eslint \"resources/js/**/*.{js,ts,vue,jsx,tsx}\" --format stylish",
        "audit:a11y": "node scripts/audit/axe-scan.mjs",
        "audit:ui:a11y": "node scripts/audit/axe-scan.mjs public/styleguide.html || true",
        "audit:lh": "lhci autorun || true",
        "audit:coverage": "node scripts/audit/css-coverage.mjs",
        "audit:cascade": "node scripts/audit/css-cascade.mjs",
        "audit:guard": "node scripts/audit/guard-nonlayout.mjs",
        "audit:contrast": "node scripts/audit/color-contrast.mjs",
        "audit:zindex": "node scripts/audit/zindex-map.mjs",
        "audit:all": "npm-run-all -s audit:stylelint audit:eslint audit:cascade audit:guard audit:contrast audit:zindex audit:a11y audit:ui:a11y audit:coverage",
        "audit:critical": "npm-run-all -s audit:guard audit:cascade audit:contrast",
        "test:php": "php vendor/bin/pest --parallel --stop-on-failure",
        "test:php:watch": "php vendor/bin/pest --watch",
        "test:search": "node --test tests/js/search.test.js"
    },
    "devDependencies": {
        "@lhci/cli": "^0.14.0",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/vite": "^4.1.13",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "alpinejs": "^3.4.2",
        "autoprefixer": "^10.4.21",
        "axe-core": "^4.10.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "css-tree": "^3.0.0",
        "eslint": "^9.0.0",
        "eslint-plugin-import": "^2.30.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-unicorn": "^56.0.0",
        "eslint-plugin-vue": "^9.28.0",
        "laravel-vite-plugin": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "postcss-reporter": "^7.1.0",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "puppeteer": "^23.0.0",
        "specificity": "^1.0.0",
        "stylelint": "^16.0.0",
        "stylelint-config-recommended-scss": "^14.0.0",
        "stylelint-config-standard": "^36.0.0",
        "stylelint-high-performance-animation": "^1.10.0",
        "stylelint-no-unsupported-browser-features": "^8.0.0",
        "stylelint-order": "^6.0.0",
        "tailwindcss": "^3.4.18",
        "vite": "^7.0.4",
        "vue-eslint-parser": "^9.4.0"
    }
}
